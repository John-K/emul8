#
# efm32gg
#

machine LoadPeripherals @platforms/cpus/efm32gg.json

sysbus Tag <0x40006000,0x40006fff> "GPIO_BASE"
sysbus Tag <0x4000e400,0x4000E4FF> "efm32-uart.4"

sysbus Tag <0xe000e000,0xE000EFFF> "SYSTEM_CONTROL"
sysbus Tag <0x10000000,0x1001ffff> "SRAM"
sysbus Tag <0xfe08000,0xFE081FF> "chip_config"
sysbus Tag <0x0,0x0fffff> "flash"
sysbus Tag <0x40010000,0x40010fff> "timers"

machine SetClockSource sysbus.cpu


machine PyDevFromString "request.value = 0xFFFFFFFF" 0x400C802C 0x4 false "CMU:STATUS/OSCILLATOR"
machine PyDevFromString "request.value = 0xFFFFFFFF" 0x40000008 0x4 false "VCMP:STATUS"
